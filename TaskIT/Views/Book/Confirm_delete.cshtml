@{
    ViewBag.Title = "Book";

}

@model Book

<h2>ِAre you sure you want to delete this book ?</h2>

<div>
    <h4>Book Details </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Book Title:
        </dt>
        <dd>
            @Model.Title
        </dd>
        <br />
        <dt>Book Description: </dt>
        <dd>
            @Model.Description
        </dd>
        <br />
        <dt>Book Image </dt>
        <dd>
            <img src="~/Images/@Model.Image" class="thumbnail" style="width:68px; height:68px;" />
        </dd>
        <br />

    </dl>

    <button class="btn btn-success" style="background-color:#ec4899;"><a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.Id" style="color:white; text-decoration:none"> Confirm Delete </a></button>

</div>
<br />
@Html.ActionLink("Back", "Back", "Book")

