<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Fayroz</title>
    <link rel="stylesheet"  href="~/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Lobster+Two:ital,wght@1,700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fayroz.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />


</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-lg bg-primary" style="font-family:Lobster;" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white " asp-area="" asp-controller="Home" asp-action="Index">
                     <img src="~/images/logo.jpg" /> 
                    El-Fayroz
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Recipe" asp-action="Index">Recipes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold">Menu</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top p-2" style="font-family:lobster;color:white">
        <div class="container mt-2">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <h4>El Fayroz</h4>
                        <p>Delicious, Save and Fastest</p>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <h4>Contact Us</h4>
                        <div class="mt-3 mb-2">
                            <span><i class="fab fa-instagram fs-5" style="color: #155e75;"></i></span>
                            <span class="fs-6 mx-1"> Instgram</span>
                        </div>

                        <div class="mb-2">
                            <span><i class="fab fa-whatsapp fs-5" style="color: #155e75;"></i></span>
                            <span class="fs-6 mx-1"> Whatsapp</span>
                        </div>

                        <div class="mb-2">
                            <span><i class="fab fa-facebook fs-5" style="color: #155e75;"></i></span>
                            <span class="fs-6 mx-1"> Facebook</span>
                        </div>

                        <div class="mb-2">
                            <span><i class="fas fa-envelope fs-5" style="color: #155e75;"></i></span>
                            <span class="fs-6 mx-1"> Gmail</span>
                        </div>
                    </div>
                    <div class=" col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <h4>Address</h4>
                        <pre>Faraskur - Al Mahatta Square</pre>
                    </div>
                </div>
                <div>
                    <h5 class="text-center">Powered By Rahma, Husieen</h5>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
